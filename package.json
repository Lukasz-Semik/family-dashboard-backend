  "scripts": {
    "tsc": "tsc",
    "watch": "nodemon",
    "rimraf": "rimraf",
    "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/server.ts",
    "lint": "tslint -p . -c tslint.json 'src/**/*.ts'",
    "test": "yarn rimraf build && export NODE_ENV=test || SET NODE_ENV=test && yarn tsc && nyc mocha build/**/*.spec.js --exit",
    "start": "node build/src/server.js",
    "build:prod": "yarn tsc --project \"./tsconfig.prod.json\"",
    "heroku-postbuild": "yarn build:prod",
    "prepush": "yarn lint && yarn test",
    "prepareDev": "node config/createEnvFiles.js",
    "deploy": "git checkout master && git pull origin master && git push heroku master"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.4",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "@types/node": "^10.9.4",
    "chai": "^4.1.2",
    "husky": "^0.14.3",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "nyc": "^13.0.1",
    "prettier": "^1.14.2",
    "prettier-tslint": "^0.4.0",
    "rimraf": "^2.6.2",
    "supertest": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "multer": "^1.3.1",
    "pg": "^7.4.3",
    "reflect-metadata": "^0.1.12",
    "routing-controllers": "^0.7.7",
    "typeorm": "^0.2.7",
    "validator": "^10.7.1"
  }
